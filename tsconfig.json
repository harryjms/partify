{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "module": "esnext",
    "esModuleInterop": true,
    "target": "esnext",
    "jsx": "preserve",
    "allowJs": false,
    "checkJs": false,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "rootDir": "src",
    "lib": [
      "dom",
      "es2015",
      "es2016"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./@types"
    ]
  },
  "include": [
    "src/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}